<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AndroidForeverHang.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label x:Name="StatusLabel"></Label>
        <Button x:Name="ConnectButton" Clicked="ConnectButton_Clicked" Text="Connect"/>
        <Button x:Name="DisconnectButton" IsEnabled="False" Clicked="DisconnectButton_Clicked" Text="Disconnect"/>
    </StackLayout>

</ContentPage>
